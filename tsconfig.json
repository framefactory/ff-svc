{
    "compilerOptions": {
        "composite": true,
        "types": [ "svelte" ],
        "target": "ES6",
        "module": "CommonJS",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,

        "outDir": "built/exports",
        "rootDir": "src",

        "baseUrl": ".",
        "paths": {
            "@ff/core/*": [ "../core/src/*" ],
            "@ff/browser/*": [ "../browser/src/*" ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        { "path": "../core" },
        { "path": "../browser" }
    ]
}